# DeFiGuard Risk Environment Variables

# External API Keys
CDP_API_KEY=your_coinbase_cdp_api_key
GRAPH_API_KEY=your_graph_api_key
MCP_SERVER_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://defiguard:password@postgres:5432/defiguard_db
REDIS_URL=redis://redis:6379

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key

# Blockchain Networks
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_PROJECT_ID
BASE_RPC_URL=https://mainnet.base.org

# Smart Contract Addresses (will be populated after deployment)
REBALANCER_CONTRACT_ETH=
REBALANCER_CONTRACT_POLYGON=
REBALANCER_CONTRACT_ARBITRUM=
REBALANCER_CONTRACT_OPTIMISM=
REBALANCER_CONTRACT_BASE=

# Chainlink Configuration
CHAINLINK_MCP_SERVER_URL=your_chainlink_mcp_url
CCIP_ROUTER_ETH=0x80226fc0Ee2b096224EeAc085Bb9a8cba1146f7D
CCIP_ROUTER_POLYGON=0x3C3D92629A02a8D95D5CB9650fe49C3544f69B43
CCIP_ROUTER_ARBITRUM=0x141fa059441E0ca23ce184B6A78bafD2A517DdE8
CCIP_ROUTER_OPTIMISM=0x3206695CaE29952f4b0c22a169725a865bc8Ce0f
CCIP_ROUTER_BASE=0x673AA85efd75080031d44fcA061575d1dA427A28

# Performance Settings
REDIS_CACHE_TTL=300
API_RATE_LIMIT=100
MAX_PORTFOLIO_SIZE=100

# Development
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=true
