# Backend Environment Variables

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
API_SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://defiguard:password@localhost:5432/defiguard_db
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# External API Keys
CDP_API_KEY=your_coinbase_cdp_api_key
GRAPH_API_KEY=your_graph_api_key
MCP_SERVER_URL=http://localhost:3001

# Blockchain Networks
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID  
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_PROJECT_ID
BASE_RPC_URL=https://mainnet.base.org

# Chainlink Configuration
CHAINLINK_MCP_SERVER_URL=your_chainlink_mcp_url

# Performance Settings
API_RATE_LIMIT=100
MAX_PORTFOLIO_SIZE=100
WORKER_PROCESSES=4

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=true
