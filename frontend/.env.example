# Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_IDS=1,137,42161,10,8453

# Wallet Connect Project ID (get from walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=DeFiGuard Risk
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_REBALANCING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_TESTNET=false

# External Services
NEXT_PUBLIC_GRAPH_ENDPOINT=https://api.thegraph.com/subgraphs/name/your-subgraph
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
